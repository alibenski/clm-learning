  <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    {# <div class="carousel-indicators">
    {% for key, row in rows %}
          {% if key == 0 %}
           
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="" class="active" aria-current="true" aria-label="Slide X"></button>
          {% else %}
           
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="" aria-label="Slide X"></button>
          {% endif %}
    {% endfor %}
    </div> #}
    <div class="carousel-inner">

      {% if title %}
        <h3>{{ title }}</h3>
      {% endif %}

      {% for key, row in rows %}
          {%
            set row_classes = [
              default_row_class ? 'views-row',
            ]
          %}
          
          {% if key == 0 %}
            <div{{ row.attributes.addClass(row_classes,'carousel-item', 'active') }} >
          {% else %}
            <div{{ row.attributes.addClass(row_classes,'carousel-item') }}>
          {% endif %}
              
              <img class="d-block img-fluid"  src="{{file_url(row.content['#row']._entity.field_teaser_image.entity.uri.value)}}" alt="First Slide" width="100%" style="background-size: cover;">
              
              <div class="container caption-bg">
                <div class="d-none d-md-block position-relative text-center text-white">
                  <h3>{{row.content['#row']._entity.title.value|raw }}</h3>
                  {# <p>Some representative placeholder content for the first slide of the carousel.</p> #}
                  <p><a class="btn btn-lg btn-primary" href="#">Read More</a></p>
                </div>
              </div>
            </div>
            
      {% endfor %}

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>